;\r\n}\r\n\r\nbutton:active {\r\n    transform: scale(0.98);\r\n}\r\n\r\np {\r\n    margin-top: 10px;\r\n    color: #333;\r\n}\r\n\r\n#messages, #chat-box {\r\n    margin-top: 20px;\r\n}\r\n\r\n#chat-box {\r\n    border: 1px solid #ddd;\r\n    border-radius: 10px;\r\n    padding: 10px;\r\n    max-height: 300px;\r\n    overflow-y: auto;\r\n    overflow-x: hidden;\r\n    background-color: rgba(255, 255, 255, 0.9);\r\n    color: #333;\r\n    height: 250px;\r\n    box-sizing: border-box;\r\n    transition: background-color 0.3s;\r\n}\r\n\r\n#chat-box:hover {\r\n    background-color: rgba(255, 255, 255, 1);\r\n}\r\n\r\n/* Стили для прокрутки */\r\n#chat-box::-webkit-scrollbar {\r\n    width: 6px;\r\n}\r\n\r\n#chat-box::-webkit-scrollbar-thumb {\r\n    background-color: rgba(2, 3, 4, 0.2);\r\n    border-radius: 7px;\r\n}\r\n\r\n#chat-box::-webkit-scrollbar-thumb:hover {\r\n    background-color: rgba(0, 1, 2, 0.3);\r\n}\r\n\r\n#chat-box::-webkit-scrollbar-track {\r\n    background: transparent;\r\n}\r\n\r\n\r\n\r\n.message {\r\n    background-color: rgba(200, 236, 239, 0.9);\r\n    color: #333;\r\n    transition: background-color 0.3s;\r\n    padding: 10px 15px;\r\n    margin-bottom: 10px;\r\n    border-radius: 10px;\r\n    max-width: 70%;\r\n    word-wrap: break-word;\r\n    position: relative;\r\n}\r\n\r\n\r\n\r\n.message-sender,\r\n.message-recipient,\r\n.message-timestamp {\r\n    font-size: 12px;\r\n    color: #888;\r\n    margin-top: 4px;\r\n    display: block;\r\n}\r\n\r\n.message.sent {\r\n    background-color: rgba(212, 237, 218, 0.9);\r\n    text-align: right;\r\n    padding: 15px 15px;\r\n    margin-bottom: 10px;\r\n    border-radius: 25px;\r\n    max-width: fit-content;\r\n    word-wrap: break-word;\r\n    align-self: flex-end;\r\n    margin-left: auto; /* Перемещение фона сообщений вправо */\r\n}\r\n\r\n\r\n.message.received {\r\n    background-color: rgba(209, 236, 241, 0.9);\r\n    text-align: left;\r\n    padding: 15px 15px;\r\n    margin-bottom: 10px;\r\n 